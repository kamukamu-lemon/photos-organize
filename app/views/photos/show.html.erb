<div class="max-w-3xl w-full mx-auto p-4">
  <div class="bg-white rounded-2xl shadow-md overflow-hidden">

  
    <div class="p-4 space-y-4">
      <% @photo.images.each do |image| %>
        <%= image_tag image, class: "w-full h-auto object-contain rounded-md border border-gray-200" %>
      <% end %>
    </div>

    <div class="p-4 border-t text-center">
      <h2 class="text-2xl font-bold text-gray-800"><%= @photo.title %></h2>
    </div>
  </div>


  <% if @photo.memo.present? %>
    <div class="mt-6 bg-white rounded-2xl shadow p-4 text-gray-700 whitespace-pre-line">
      <%= simple_format(@photo.memo) %>
    </div>
  <% end %>

  
  <div class="flex flex-col items-center space-y-6 mt-6">
    <%= link_to "EDIT", edit_photo_path(@photo), class: "btn-black" %>
    <%= link_to "DELETE", photo_path(@photo), data: { turbo_method: :delete }, class: "btn-danger-flat-mono" %>
  </div>
</div>