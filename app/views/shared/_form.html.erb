<%= form_with model: @photo, id: 'photos_form', local: true, html: { class: "max-w-md w-full mx-auto" } do |f| %>
  <%= render 'shared/error_messages', model: @photo %>

  <!-- 画像アップロード -->
  <div class="mb-6">
    <label class="block text-gray-700 font-semibold mb-2">Photos</label>
    <div class="border border-dashed border-gray-400 p-4 rounded-md bg-white">
      <div id="previews" class="flex flex-wrap gap-2 mb-4"></div>
      <div class="click-upload">
        <%= f.file_field :images, name: 'photo[images][]', data: { index: 0 }, class: "custom-file-button" %>
      </div>
    </div>
  </div>

  <!-- タイトル -->
  <div class="mb-4">
    <%= f.label :title, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400", maxlength: "40", autofocus: true %>
  </div>

  <!-- メモ -->
  <div class="mb-4">
    <%= f.label :memo, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_area :memo, maxlength: 250, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 min-h-[60px] resize-none", oninput: "this.style.height = ''; this.style.height = this.scrollHeight + 'px'" %>
  </div>

  <!-- サブミットボタン -->
  <div class="text-center mt-6">
    <%= f.submit form_mode == :edit ? "EDIT" : "REGISTER", class: "btn-black" %>
  </div>
<% end %>

<!-- 戻るボタン -->
<div class="text-center mt-6">
  <%= link_to "BACK", cancel_path, class: "btn-white-raised" %>
</div>