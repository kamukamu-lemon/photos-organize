<div class="max-w-md w-full mx-auto bg-white rounded-xl  p-6">
  <%= form_with model: resource, url: user_registration_path, id: 'new_user_registration', local: true do |f| %>
    <%= render "shared/error_messages", model: resource %>

    <div class="mb-4">
      <%= f.label :nickname, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :nickname, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "例) sampleサンプル", maxlength: "40", autofocus: true %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "PC・携帯どちらでも可" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "6文字以上の半角英数字" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "同じパスワードを入力して下さい" %>
    </div>

    <div class="text-center mt-6 ">
      <%= f.submit "REGISTER", class: "btn-black" %>
    </div>
  <% end %>

  <div class="text-center mt-6 ">
    <%= link_to "BACK", unauthenticated_root_path, class: "btn-white-raised" %>
  </div>
</div>